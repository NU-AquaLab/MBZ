<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/plugin_name"
        android:layout_width="126dp"
        android:layout_height="21dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/plugin_open"
        app:layout_constraintEnd_toStartOf="@+id/plugin_open"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/plugin_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/plugin_start"
        app:layout_constraintEnd_toStartOf="@+id/plugin_start"
        app:layout_constraintStart_toStartOf="@+id/plugin_name" />

    <Button
        android:id="@+id/plugin_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/plugin_stop"
        app:layout_constraintStart_toEndOf="@+id/plugin_open"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plugin_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/plugin_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plugin_start" />

</android.support.constraint.ConstraintLayout>